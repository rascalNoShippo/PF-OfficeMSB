<% if @message_error %>
	<%= render "layouts/forbidden" %>
<% else %>
	<% content_for :title, @message.title %>
	<div class="p-3">
		<div>
			<%= link_to "javascript:history.back();" do %>
				<i class="fas fa-arrow-circle-left"></i>戻る
			<% end %>
		</div>
		<h3><%= @message.title %></h3>
		<h6 class="mt-4">宛先一覧 (<%= @receivers.count %> 人)</h6>
		<table class="table w-unset">
			<thead>
				<tr>
					<th>ユーザー名</th>
					<th>変更/削除の許可</th>
				</tr>
				</thead>
				<tbody>
				<% @receivers.each do |receiver| %>
					<tr>
						<td>
							<%= link_to receiver.icon + receiver.name, user_path(receiver.id) %>
							<%= "(差出人)" if receiver == @message.sender %>
						</td>
						<td class="text-center">
							<%= "<i class='fas fa-check-circle'></i>".html_safe if @editors.include?(receiver) %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
<% end %>