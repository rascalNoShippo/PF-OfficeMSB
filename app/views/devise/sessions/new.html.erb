<div class="login_form d-flex pt-5">
  <div class="m-auto text-center">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field text-start my-3">
        <%= f.label :login_name, "ログイン名" %><br />
        <%= f.text_field :login_name, autofocus: true, class: "form-control" %>
      </div>

      <div class="field text-start my-3">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field my-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, "パスワードを記憶する", class: "form-check-label" %>
        </div>
      <% end %>

      <div class="actions my-3">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>