<% item.attachments.each do |file| %>
	<div class="mt-2 position-relative">
		<% if file.content_type.start_with?("image") %>
			<%= image_tag rails_blob_path(file), class: "image_in_body" %>
		<% else %>
			<%= link_to file.filename, rails_blob_path(file, disposition: "inline"), target: :_blank, rel: "noopener noreferrer" %>
		<% end %>
		<span class="position-absolute bottom-0 ml-2">
			<%= "(#{(file.byte_size/1024.0).round.to_s(:delimited)} kB, #{file.content_type})" %>
		</span>
	</div>
<% end %>
